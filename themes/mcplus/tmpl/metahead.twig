<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

<title>{% if meta.title %}{{ meta.title }}&nbsp;|&nbsp;{% endif %}{{ site_title }}</title>
{% if meta.description %}
    <meta name="description" content="{{ meta.description|striptags }}" />
{% endif %}
{% if meta.robots %}
    <meta name="robots" content="{{ meta.robots }}" />
{% endif %}
<meta name="color-scheme" content="dark light">

{% if current_page %}
    <link rel="canonical" href="{{ current_page.url }}" />
{% endif %}

{% for language, display_name in languages %}
    <link rel="alternate" hreflang="{{ language }}" href="{{ language|link }}" />
{% endfor %}

<link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/droidsans.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/fontello.css" type="text/css" />

