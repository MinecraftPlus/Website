<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <title>{% if meta.title %}{{ meta.title }}&nbsp|&nbsp{% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/droidsans.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/fontello.css" type="text/css" />

	<script async src="https://www.googletagmanager.com/gtag/js?id=G-2T18T0K2B9"></script>
	<script>
	  window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'G-2T18T0K2B9');
	</script>
</head>
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>

    {% include 'header.twig' %}

    <div id="main" role="main">
        <div class="container">
            {{ content }}

			<h1>Aktualnie realizowane zadania</h1>
			{% if not pages("steps") is empty %}
				{% for page in pages("steps")|sort_by("time")|reverse if not page.hidden %}
					<div class="post">
						<div style="display: flow-root">
							<h3  style="float:left;" >{{ page.title }}</h3>
							<p style="float:right;">{{ page.date }}</p>
						</div>
						<div style="">
							<p class="desc">{{ page.description }}</p>
							{% if not page.meta.Progress is empty %}
								{% include 'progressbar.twig' with {'percent': page.meta.Progress} %}
							{% endif %}
							<p class="date">{{ page.id|content }}</p>
						</div>
						<hr>
					</div>
				{% endfor %}
			{% else %}
				<div class="post">
					<p>Brak aktualnych działań do wyświetlenia</p>
				</div>
			{% endif %}

			<br/>
			<h1>Wcześniejsze działania</h1>
			{% if not pages("steps/done") is empty %}
				{% for page in pages("steps/done")|sort_by("time")|reverse if not page.hidden %}
					<div class="post">
						<div style="display: flow-root">
							<h3 style="float:left;">{{ page.title }}</h3>
							<p style="float:right;">{{ page.date }}</p>
						</div>
						<div style="">
							<p class="desc">{{ page.description }}</p>
							<p class="date">{{ page.id|content }}</p>
						</div>
						<hr>
					</div>
				{% endfor %}
			{% else %}
				<div class="post">
					<p>Brak wcześniejszych działań do wyświetlenia</p>
				</div>
			{% endif %}
        </div>
    </div>

	{% include 'footer.twig' %}

    <script src="{{ theme_url }}/js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/pico.js" type="text/javascript"></script>

</body>
</html>
